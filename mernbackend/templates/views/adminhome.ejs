<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<style>
    body{
     
    /* fallback for old browsers */
    background: #0d5e5e;
  
    /* Chrome 10-25, Safari 5.1-6 */
    background: -webkit-linear-gradient(to right, rgba(13,94,94,0.95), rgba(51,8,103,0.95));
  
    /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
    background: linear-gradient(to right, rgba(13,94,94,0.95), rgba(51,8,103,0.95))
  }
    table,tr,td {
        border-color: black;
        border: 1px solid;
   }
    .heading{
        text-align: center;
        font-size: 20px;
    }
    .data{
        color:white;
        font-size: 20px;


    }
   
    .table1{
        background-color: bisque;

    }
    .flex-container{
        
  display: flex;
  justify-content: space-between;
  margin-block: 25px;
  margin-left: 30px;
  margin-right: 30px;
 
}
.delete{
    height: 150px;
}
    
    
</style> 
<body> 
    <div class="heading">
    <h1>ADMIN PAGE</h1></div>
    <br>
    <br>
    <div class="flex-container">
       
   
        <div class="datatable">
            <h1 class="data">DATA-TABLE</h1>
            <% if(details !=null) { %>
                <table class="table1">
                <tr>
                    <th>Name</th>
                    <th>email</th>
                    <th>password</th>
                    
                </tr>
                <% details.forEach(function(item){ %>
                <tr>
                    <td><%= item.yourname %></td>
                    <td><%= item.email %></td>
                    <td><%= item.password %></td>
                   
                
                </tr>
                <% }) %>
                </table>
                <% } %>
            
        </div>
        <div class="delete">
            <h1 class="data">DELETE DATA</h1>
            <form action="/delete" method="post">
                <!-- 2 column grid layout with text inputs for the first and last names -->
                <div class="row mb-4">
                  <div class="col">
                    <div class="form-outline">
                      <input type="text" id="form3Example1" class="form-control " name="deleteemail" />
                      <label class="form-label" for="form3Example1">Enter The Email You Want To Delete</label>
                    </div>
                  </div>
               
                </div>
              
    
              
                <!-- Submit button -->
                <button type="submit" class="btn btn-primary btn-block mb-4">Delete</button>
              
                
              </form>
        </div>
        <div class="insert">
            <h1 class="data">INSERT DATA</h1>
            <form action="/insert" method="post">
                <!-- 2 column grid layout with text inputs for the first and last names -->
                <div class="row mb-4">
                  <div class="col">
                    <div class="form-outline">
                      <input type="text" id="form3Example1" class="form-control" name="insertname"/>
                      <label class="form-label" for="form3Example1">Name</label>
                    </div>
                  </div>
               
                </div>
              
                <!-- Email input -->
                <div class="form-outline mb-4">
                  <input type="email" id="form3Example3" class="form-control" name="insertemail"/>
                  <label class="form-label" for="form3Example3">Email address</label>
                </div>
              
                <!-- Password input -->
                <div class="form-outline mb-4">
                  <input type="password" id="form3Example4" class="form-control" name="insertpassword"/>
                  <label class="form-label" for="form3Example4">Password</label>
                </div>
              
                
              
                <!-- Submit button -->
                <button type="submit" class="btn btn-primary btn-block mb-4">Insert</button>
              
                
              </form>
        </div>
        <div class="update">
            <h1 class="data">UPDATE DATA</h1>
            <form action="/update " method="post">
                <!-- 2 column grid layout with text inputs for the first and last names -->
                <div class="row mb-4">
                  <div class="col">
                    <div class="form-outline">
                      <input type="text" id="form3Example1" class="form-control" name="updatename"/>
                      <label class="form-label" for="form3Example1">Name</label>
                    </div>
                  </div>
               
                </div>
              
                <!-- Email input -->
                <div class="form-outline mb-4">
                  <input type="email" id="form3Example3" class="form-control" name="updateemail"/>
                  <label class="form-label" for="form3Example3">Email address</label>
                </div>
              
                <!-- Password input -->
                <div class="form-outline mb-4">
                  <input type="password" id="form3Example4" class="form-control" name="updatepassword" />
                  <label class="form-label" for="form3Example4">Password</label>
                </div>
              
                
              
                <!-- Submit button -->
                <button type="submit" class="btn btn-primary btn-block mb-4">Update</button>
              
                
              </form>
        </div>

        <div class="search">
          <h1 class="data">SEARCH DATA</h1>
          <form action="/search" method="post">
              <!-- 2 column grid layout with text inputs for the first and last names -->
              <div class="row mb-4">
                <div class="col">
                  <div class="form-outline">
                    <input type="text" id="form3Example1" class="form-control " name="name" />
                    <label class="form-label" for="form3Example1">Enter The Name  You Want To Search</label>
                  </div>
                </div>
             
              </div>
            
              <!-- Submit button -->
              <button type="submit" class="btn btn-primary btn-block mb-4">SEARCH</button>
  
       
    </div>   
    <div logout>
      <a href = "/adminlogout"  class="btn btn-warning">Logout</a>
    </div>
    </body>
</html>

    